---
const { active, parentSection } = Astro.props;
---

<div class="w-1/5 ml-2">
    <h1 class="text-2xl mb-2 underline">Introduction</h1>
    <div class="ml-1">
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="intro"><a href="/Introduction/Overview">Overview</a></h2>
        </div>
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="intro"><a href="/Introduction/Requirements">Requirements</a></h2>
        </div>
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="intro"><a href="/Introduction/Installation">Installation</a></h2>
        </div>
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="intro"><a href="/Introduction/Errors">Errors</a></h2>
        </div>
    </div>
    <h1 class="text-2xl mb-2 underline">Main Page</h1>
    <div class="ml-1">
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="main"><a href="/Main Page/Structure">Structure</a></h2>
        </div>
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="main"><a href="/Main Page/Design Choices">Design Choices</a></h2>
        </div>
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="main"><a href="/Main Page/Problems">Problems</a></h2>
        </div>
        <div class="flex flex-row items-center">
            <div class="w-1 h-6 rounded-sm bg-sky-500 hidden"></div>
            <h2 class="main"><a href="/Main Page/Media Changes">Media Changes</a></h2>
        </div>
    </div>
    <h1 class="text-2xl mb-2 underline">Blog</h1>
    <div class="ml-1">
        <h2 class="blog"><a href="/Blog/Structure">Structure</a></h2>
        <h2 class="blog"><a href="/Blog/Design Choices">Design Choices</a></h2>
        <h2 class="blog"><a href="/Blog/Problems">Problems</a></h2>
        <h2 class="blog"><a href="/Blog/Media Changes">Media Changes</a></h2>
    </div>
    <h1 class="text-2xl mb-2 underline">Documentation</h1>
    <div class="ml-1">
        <h2 class="docs"><a href="/Documentation/Why use a framework">Why use a framework?</a></h2>
        <h2 class="docs"><a href="/Documentation/Why AstroJS">Why AstroJS?</a></h2>
        <h2 class="docs"><a href="/Documentation/Structure">Structure</a></h2>
        <h2 class="docs"><a href="/Documentation/Advantages">Advantages</a></h2>
        <h2 class="docs"><a href="/Documentation/Problems">Problems</a></h2>
        <h2 class="docs"><a href="/Documentation/Styling">Styling</a></h2>
        <h2 class="docs"><a href="/Documentation/mdx">Markdown & MDX</a></h2>
    </div>
    <hidden id="hidden" class="hidden">{active}</hidden> <!-- Used to get frontmatter  -->
    <hidden id="hidden2" class="hidden">{parentSection}</hidden> <!-- Used to get frontmatter  -->
    <script>
        const active = document.getElementById("hidden").innerText;
        const parentSection = document.getElementById("hidden2").innerText.split("-")[0];
        const elements = document.getElementsByTagName("h2");
        let i = 0;

        for(i=0; i<elements.length; i++) {
            if(elements[i].innerText == active && elements[i].classList.contains(parentSection)) {
                elements[i].classList.add("text-sky-500");
                elements[i].previousElementSibling.classList.remove("hidden");
            }
        }
    </script>
</div>