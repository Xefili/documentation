---
const { active } = Astro.props;
import "../styles/Sidebar.style.css"
---

<div class="md:w-1/5">
    <h1>Introduction</h1>
    <div class="border-l-2 border-slate-600 pl-4">
        <h2><a href="/Introduction/Overview">Overview</a></h2>
        <h2><a href="/Introduction/Requirements">Requirements</a></h2>
        <h2><a href="/Introduction/Installation">Installation</a></h2>
        <h2><a href="/Introduction/Errors">Errors</a></h2>
    </div>
    <hidden id="hidden" class="hidden">{active}</hidden>
    <script>
        const active = document.getElementById("hidden").innerText;
        const elements = document.getElementsByTagName("h2")
        let i = 0;
        
        for(i=0; i<elements.length; i++) {
            if(elements[i].innerText == active) {
                elements[i].classList.add("bg-blue-500");
            }
        }
    </script>
</div>